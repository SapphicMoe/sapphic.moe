---
import { Icon } from 'astro-icon/components';
---

<footer class="pt-5" aria-label="footer">
  <hr class="text-ctp-surface1" />
  <p class="pt-3">&copy; {new Date().getFullYear()} Sapphic Angels.</p>

  <div class="flex flex-row flex-wrap gap-x-4 gap-y-2 pt-3" aria-label="footer-links">
    <div class="flex gap-1">
      <Icon name="mdi:heart" size={20} aria-hidden={true} />
      <a
        href="https://ko-fi.com/solelychloe"
        title="A link to our Ko-fi page, where you can choose to support us with financial means, if you wish."
        target="_blank"
      >
        Support us
      </a>
    </div>

    <div class="flex gap-1">
      <Icon name="mdi:rss" size={20} aria-hidden={true} />
      <a href="/rss.xml" title="A link to our RSS feed for our blog articles.">RSS feed</a>
    </div>

    <div class="flex gap-1">
      <Icon name="mdi:source-branch" size={20} aria-hidden={true} />
      <a
        href="https://github.com/solelychloe/sapphic.moe"
        title="A link to the source code that houses this website."
        target="_blank"
      >
        Source code
      </a>
    </div>
  </div>
</footer>
