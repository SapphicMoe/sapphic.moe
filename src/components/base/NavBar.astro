---
import Avatar from '@components/base/Avatar.astro';
import NavLink from '@components/base/NavLink.astro';
import { Image } from 'astro:assets';

interface Link {
  href: string;
  text: string;
  icon: string;
}

const links = [
  { href: '/', text: 'Home', icon: 'home' },
  { href: '/about', text: 'About', icon: 'information' },
  { href: '/articles', text: 'Articles', icon: 'pencil' },
  { href: '/contact', text: 'Contact', icon: 'link-variant' },
] satisfies Link[];
---

<header class="pb-5">
  <div class="flex items-center gap-3 pb-2">
    <a
      href="https://solstice.tf/avatar"
      title="A link to our profile picture. The character displayed here is Silver Wolf from the videogame Honkai: Star Rail."
      target="_blank"
    >
      <Avatar class="w-20 rounded-full border-none" width={50} height={50} />
    </a>

    <div class="flex flex-col">
      <h1 class="text-3xl font-semibold">Sapphic Angels</h1>
      <p class="text-ctp-overlay1">(she/it/they)</p>
    </div>
  </div>

  <nav class="flex gap-3" aria-label="navigation-links">
    {
      links.map(({ href, text }) => {
        return <NavLink {href} {text} class="underline-offset-4" />;
      })
    }
  </nav>
</header>
