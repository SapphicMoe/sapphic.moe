{
  // Astro TSConfig base configuration
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Aliases
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@config": ["src/site.config.ts"]
    }
  }
}
