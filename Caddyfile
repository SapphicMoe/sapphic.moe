# Credit goes to Ovyerus <https://github.com/Ovyerus> for the Caddyfile :)

# HTTPS is expected to be handled by Cloudflare or some other reverse proxy.
{
  auto_https off
}

:8080 {
  @localhost {
    host localhost
  }

  root @localhost dist
  root * /var/www/html
  encode gzip # TODO: check options
  file_server
  log

  @giscusCSS path /giscus.css
  header @giscusCSS Access-Control-Allow-Origin "*"
  header @giscusCSS Access-Control-Allow-Methods "GET, OPTIONS"
  header @giscusCSS Access-Control-Allow-Headers "Content-Type"

  reverse_proxy /script.js https://umami.sappho.systems {
    header_up Host {upstream_hostport}
  }
  reverse_proxy /api/send https://umami.sappho.systems {
    header_up Host {upstream_hostport}
  }

  handle_errors {
    @404 {
      expression {http.error.status_code} == 404
    }

    rewrite @404 /404.html
    file_server
  }
}
